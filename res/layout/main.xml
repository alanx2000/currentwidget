<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="68dp"
    android:layout_height="80dp"
    android:gravity="center"
    android:background="@drawable/widget1"
    android:id="@+id/linear_layout"
    android:paddingTop="2sp"
    >
    
    
		<TextView
			android:id="@+id/text"  
		    android:layout_width="wrap_content" 
		    android:layout_height="28dp"
		    android:gravity="center" 
		    android:text="0mA"
		    android:background="@android:color/transparent"
		    android:textColor="#757876"
		    android:textSize="18sp"
		    android:textStyle="bold"
		    />
        
	    <TextView 
	    	android:id="@+id/last_updated_text"
		    android:layout_width="wrap_content" 
		    android:layout_height="24dp"
		    android:gravity="bottom" 
		    android:text=""
		    android:background="@android:color/transparent"
		    android:textColor="#3e6eb4"
		    android:textSize="13sp"
		    />
    
	<Button android:text="@string/update_now_button" android:textColor="#757876" 
	android:id="@+id/update_now_button" android:layout_width="wrap_content" android:gravity="center"
	android:layout_height="24dp" android:textSize="10sp" android:background="@android:color/transparent"></Button>    	

      
</LinearLayout>
